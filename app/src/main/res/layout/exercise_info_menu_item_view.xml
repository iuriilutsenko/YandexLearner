<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:orientation="horizontal"
                android:background="@color/red_item_menu_expand"
                android:padding="@dimen/standard_material_padding">

    <TextView
        android:id="@+id/ingredient_textview"
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/standard_text_size"
        android:text="КАРТОЧКИ"/>

    <ImageView
        android:id="@+id/img_item_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cards_teaser"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/ingredient_textview"
        android:contentDescription="@string/card_img"
        android:layout_alignLeft="@+id/ingredient_textview"/>

    <TextView
        android:id="@+id/exercise_item_name"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="32dp"
        android:gravity="center"
        android:textSize="@dimen/small_text_size"
        android:textColor="@color/white"
        android:text="@string/sort_cards_small"
        android:layout_below="@+id/img_item_menu"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"/>

</RelativeLayout>